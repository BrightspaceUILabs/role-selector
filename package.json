{
  "name": "@brightspace-ui-labs/role-selector",
  "description": "Select roles from a dialog with role items",
  "version": "1.1.1",
  "repository": "https://github.com/BrightspaceUILabs/role-selector.git",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "role-selector.js",
    "role-item.js"
  ],
  "scripts": {
    "lint": "npm run lint:eslint && npm run lint:lit",
    "lint:eslint": "eslint . --ext .js,.html",
    "lint:lit": "lit-analyzer role-selector.js demo test",
    "lint:style": "stylelint \"**/*.js\"",
    "start": "es-dev-server --app-index demo/index.html --node-resolve --dedupe --open --watch",
    "test": "npm run lint && npm run test:headless && npm run test:diff",
    "test:diff": "mocha ./**/*.visual-diff.js -t 40000",
    "test:diff:golden": "mocha ./**/*.visual-diff.js -t 40000 --golden",
    "test:diff:golden:commit": "commit-goldens",
    "test:headless": "karma start",
    "test:headless:watch": "karma start --auto-watch=true --single-run=false",
    "test:sauce": "karma start karma.sauce.conf.js"
  },
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "devDependencies": {
    "@brightspace-ui/visual-diff": "^1.5.1",
    "@open-wc/testing": "^2",
    "@open-wc/testing-karma": "^3",
    "@semantic-release/git": "^9",
    "babel-eslint": "^10",
    "deepmerge": "^3",
    "es-dev-server": "^1.57.4",
    "eslint": "^6",
    "eslint-config-brightspace": "^0.6.7",
    "eslint-plugin-html": "^6",
    "eslint-plugin-lit": "^1",
    "eslint-plugin-sort-class-members": "^1",
    "frau-ci": "^1",
    "karma-sauce-launcher": "^2",
    "lit-analyzer": "^1",
    "mocha": "^8.2.1",
    "puppeteer": "^5.5.0",
    "semantic-release": "^17.1.2",
    "sinon": "^9.0.3"
  },
  "dependencies": {
    "@brightspace-ui/core": "^1.80.1",
    "@brightspace-ui/stylelint-config": "0.0.1",
    "@webcomponents/webcomponentsjs": "^2",
    "lit-element": "^2",
    "stylelint": "^13.7.1"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/github",
      "@semantic-release/npm",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]"
        }
      ]
    ]
  }
}
